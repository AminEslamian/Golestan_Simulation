@model Golestan_Simulation.Models.Classrooms

<h1>حذف کلاس</h1>
<p>آیا شما از حذف کلاس @Model.Building - @Model.RoomNumber اطمینان دارید؟</p>

<form asp-area="Admin"
      asp-controller="ClassroomsManagement"
      asp-action="Delete"
      asp-route-id="@Model.Id"
      method="post">
    <button type="submit" class="btn btn-danger">بله, حذف شود</button>
    <a asp-action="Index" class="btn btn-secondary">لغو</a>
</form>
