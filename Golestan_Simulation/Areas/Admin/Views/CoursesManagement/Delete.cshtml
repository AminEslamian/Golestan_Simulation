@model Golestan_Simulation.Models.Courses

<h1>حذف درس</h1>
<p>آیا شما از حذف درس @Model.Name - @Model.Code اطمینان دارید؟</p>

<form asp-area="Admin"
      asp-controller="CoursesManagement"
      asp-action="Delete"
      asp-route-id="@Model.Id"
      method="post">
    <button type="submit" class="btn btn-danger">بله, حذف شود</button>
    <a asp-action="Index" class="btn btn-secondary">لغو</a>
</form>
