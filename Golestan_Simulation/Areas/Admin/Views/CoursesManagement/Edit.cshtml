@model Golestan_Simulation.Models.Courses

@{
    ViewData["Title"] = "ویرایش درس";
}

<h1>@ViewData["Title"]</h1>

<form asp-area="Admin"
      asp-controller="CoursesManagement"
      asp-action="Edit"
      asp-route-id="@Model.Id"
      method="post">

    <div class="form-group">
        <label for="Name">نام درس</label>
        <input name="Name"
               id="Name"
               value="@Model.Name"
               class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Code">کد درس</label>
        <input name="Code"
               id="Code"
               value="@Model.Code"
               class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Unit">تعداد واحد</label>
        <input name="Unit"
               id="Unit"
               value="@Model.Unit"
               class="form-control" />
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ExameDate">تاریخ امتحان</label>
        <input name="ExameDate"
               id="ExameDate"
               value="@Model.ExameDate"
               class="form-control" />
        <span asp-validation-for="ExameDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
    <a asp-area="Admin"
       asp-controller="CoursesManagement"
       asp-action="Index"
       class="btn btn-secondary">
        انصراف
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}