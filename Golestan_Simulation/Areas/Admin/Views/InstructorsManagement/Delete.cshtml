@model Golestan_Simulation.Models.Instructors

<h1>Delete Instructor</h1>
<p>آیا شما از حذف @Model.User.FirstName @Model.User.LastName – @Model.Id اطمینان دارید؟</p>

<form asp-area="Admin"
      asp-controller="InstructorsManagement"
      asp-action="Delete"
      asp-route-id="@Model.Id"
      method="post">
    <button type="submit" class="btn btn-danger">بله, حذف شود</button>
    <a asp-action="Index" class="btn btn-secondary">لغو</a>
</form>
