@model Golestan_Simulation.Models.Instructors

<h1>Delete Instructor</h1>
<p>Are you sure you want to delete @Model.User.FirstName @Model.User.LastName – @Model.Id?</p>

<form asp-area="Admin"
      asp-controller="InstructorsManagement"
      asp-action="Delete"
      asp-route-id="@Model.Id"
      method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
