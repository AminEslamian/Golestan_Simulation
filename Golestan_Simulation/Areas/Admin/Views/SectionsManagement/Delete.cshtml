@model Golestan_Simulation.Models.Sections

<h1>حذف واحد درسی</h1>
<p>آیا شما از حذف واحد درسی @Model.Id – Year @Model.Year - Semester @Model.Semester اطمینان دارید؟</p>

<form asp-area="Admin"
      asp-controller="SectionsManagement"
      asp-action="Delete"
      asp-route-id="@Model.Id"
      method="post">
    <button type="submit" class="btn btn-danger">بله, حذف شود</button>
    <a asp-action="Index" class="btn btn-secondary">لغو</a>
</form>
