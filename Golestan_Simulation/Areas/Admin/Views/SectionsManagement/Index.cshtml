@model IEnumerable<Golestan_Simulation.Models.Sections>

@{
    ViewData["Title"] = "همه واحدهای درسی";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>درس</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Course.Name - @c.Course.Code</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@c.Id">حذف</a> |
                    <a asp-action="Info" asp-route-id="@c.Id">جزئیات</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Admin"
   asp-controller="SectionsManagement"
   asp-action="AddSection"
   class="btn btn-primary mt-3">
    اضافه کردن واحد درسی
</a>
