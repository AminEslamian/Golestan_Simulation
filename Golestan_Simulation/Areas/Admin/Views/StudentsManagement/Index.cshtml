@model IEnumerable<Golestan_Simulation.Models.Students>

@{
    ViewData["Title"] = "لیست دانشجویان";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>نام</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.User.FirstName @c.User.LastName</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@c.Id">حذف</a> |
                    <a asp-action="Info" asp-route-id="@c.Id">جزئیات</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<a asp-area="Admin"
   asp-controller="StudentsManagement"
   asp-action="RegisterStudent"
   class="btn btn-primary mt-3">
    اضافه کردن دانشجو
</a>