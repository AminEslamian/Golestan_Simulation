@model Golestan_Simulation.Models.Students

@{
    ViewData["Title"] = "Student Details";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.User.FirstName @Model.User.LastName</dd>

    <dt class="col-sm-2">UserId</dt>
    <dd class="col-sm-10">@Model.UserId</dd>

    <dt class="col-sm-2">Enrollment Date</dt>
    <dd class="col-sm-10">
        @Model.EnrollmentDate
    </dd>
</dl>

<p>
    <a asp-area="Admin"
       asp-controller="StudentsManagement"
       asp-action="Delete"
       asp-route-id="@Model.Id"
       class="btn btn-danger">
        Delete
    </a>
    <a asp-area="Admin"
       asp-controller="StudentsManagement"
       asp-action="Index"
       class="btn btn-secondary">
        Back to List
    </a>
</p>

