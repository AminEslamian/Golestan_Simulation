@{
    ViewData["Title"] = "My Sections";
    var sections = ViewBag.Sections as IEnumerable<dynamic>;
}

<h2>@ViewData["Title"]</h2>

@if (sections == null || !sections.Any())
{
    <p>You are not teaching any sections currently.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Course</th>
                <th>Semester</th>
                <th>Year</th>
                <th>Classroom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in sections)
            {
                <tr>
                    <td>@s.CourseName</td>
                    <td>@s.Semester</td>
                    <td>@s.Year</td>
                    <td>@s.ClassroomName</td>
                    <td>
                        <a asp-area="Instructor"
                           asp-controller="SectionsManagement"
                           asp-action="Info"
                           asp-route-sectionId="@s.Id"
                           class="btn btn-sm btn-primary">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
