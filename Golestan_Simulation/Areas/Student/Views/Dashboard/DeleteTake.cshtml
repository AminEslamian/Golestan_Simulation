@model Golestan_Simulation.Models.Takes

@{
    ViewData["Title"] = "تأیید حذف واحد";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    آیا از حذف درس
    <strong>@Model.Section.Course.Name</strong>
    (واحد درسی @Model.Section.Id)
    اطمینان دارید؟
</div>

<form asp-action="DeleteTake" method="post">
    <input type="hidden" name="sectionId" value="@Model.SectionId" />
    <button type="submit" class="btn btn-danger">بله، حذف کن</button>
    <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
</form>
