@model IEnumerable<Golestan_Simulation.Models.Takes>

@{
    ViewData["Title"] = "واحدهای درسی ثبت‌ نامی شما";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>درس</th>
            <th>کلاس</th>
            <th>واحد درسی</th>
            <th>نمره</th>
            <th>عملیات</th>
    </thead>
    <tbody>
        @foreach (var take in Model)
        {
            <tr>
                <td>@take.Section.Course.Name</td>
                <td>@take.Section.Classroom.Building - @take.Section.Classroom.RoomNumber</td>
                <td>@take.Section.Id</td>
                <td>@take.Grade</td>
                <td>
                    <a asp-action="DeleteTake"
                       asp-route-studentId="@take.StudentId"
                       asp-route-sectionId="@take.SectionId"
                       class="btn btn-sm btn-outline-danger">
                        حذف
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
