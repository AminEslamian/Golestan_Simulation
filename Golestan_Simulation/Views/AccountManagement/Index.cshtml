@model Golestan_Simulation.ViewModels.UserViewModel;

@{
    ViewData["Title"] = "Account Page";
}

<h1>@ViewData["Title"]</h1>

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div>
        <h4>@Model.UserName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-secondary" asp-controller="AccountManagement" asp-action="Logout">Logout</a>
        <a class="btn btn-secondary" asp-area=@ViewBag.Role asp-controller="Dashboard" asp-action="Index">dashboard</a>
    </div>
}
else
{
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="text-center">
            <h2 class="mb-4"></h2>
            <a asp-controller="AccountManagement" asp-action="Login" method="post" asp-route-role=@RolesEnum.Student class="btn btn-outline-primary btn-lg mx-auto">
                Login as student
            </a>

            <a asp-controller="AccountManagement" asp-action="Login" method="post" asp-route-role=@RolesEnum.Instructor class="btn btn-outline-primary btn-lg mx-auto">
                Login as insturctor
            </a>
        </div>
    </div>
}